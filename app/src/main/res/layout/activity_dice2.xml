<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.scottysdice.dice2Activity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/score"
    android:id="@+id/score"
    android:layout_marginTop="58dp"
    android:textAlignment="center"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:textSize="20dp" />
<ImageView
    android:id="@+id/dice1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scaleType="center"
    android:src="@drawable/dice1"
    android:layout_below="@+id/score"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="38dp" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="HOLD"
    android:id="@+id/hold_button"
    android:paddingLeft="0dp"
    android:padding="15dp"
    android:layout_marginTop="38dp"
    android:onClick="hold"
    android:layout_below="@+id/dice1"
    android:layout_centerHorizontal="true" />


<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="RESET"
    android:id="@+id/reset_button"
    android:padding="15dp"
    android:paddingLeft="0dp"
    android:onClick="reset"
    android:layout_alignTop="@+id/hold_button"
    android:layout_toRightOf="@+id/turnScore"
    android:layout_toEndOf="@+id/turnScore" />


<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ROLL"
    android:id="@+id/roll_button"
    android:onClick="rollDie"
    android:padding="15dp"
    android:paddingLeft="0dp"
    android:layout_alignTop="@+id/hold_button"
    android:layout_toLeftOf="@+id/turnScore"
    android:layout_toStartOf="@+id/turnScore" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/your_score"
    android:id="@+id/turnScore"
    android:textSize="20dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="47dp" />

    <ImageView
        android:id="@+id/dice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/dice1"
        android:layout_alignTop="@+id/dice1"
        android:layout_toRightOf="@+id/hold_button"
        android:layout_toEndOf="@+id/hold_button" />

</RelativeLayout>
